   "source": [
    "import numpy as np\n",
    "\n",
    "def orthogonal_projection(v, L):\n",
    "    v = np.array(v)\n",
    "    L = np.array(L)\n",
    "    return np.dot(v, L) / np.dot(L, L) * L"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
