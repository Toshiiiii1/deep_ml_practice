   "source": [
    "import numpy as np\n",
    "\n",
    "def gini_impurity(y):\n",
    "    # calculate prob of each class in y\n",
    "    probs = np.unique(y, return_counts=True)[1]/len(y)\n",
    "    # calculate gini impurity\n",
    "    gini = 1 - np.sum(probs**2)\n",
    "    return round(gini, 3)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 15,
